<dl>
  <dt><%= Promotion.human_attribute_name(:name) %></dt>
  <dd><%= @promotion.name %></dd>

  <dt><%= Promotion.human_attribute_name(:description) %></dt>
  <dd><%= @promotion.description %></dd>

  <dt><%= Promotion.human_attribute_name(:discount_rate) %></dt>
  <dd><%= number_to_percentage(@promotion.discount_rate, separator: ",", precision: 2) %></dd>

  <dt><%= Promotion.human_attribute_name(:code) %></dt>
  <dd><%= @promotion.code %></dd>

  <dt><%= Promotion.human_attribute_name(:expiration_date) %></dt>
  <dd><%= @promotion.expiration_date.strftime("%d/%m/%Y") %></dd>

  <dt><%= Promotion.human_attribute_name(:coupon_quantity) %></dt>
  <dd><%= @promotion.coupon_quantity %></dd>
</dl>

<%= render partial: 'search',
           locals: { path_url: search_coupon_promotion_path,
                     search_model: 'coupon',
                     placeholder: t('placeholder.search_coupon')
                   }
%>


<% if @search_coupon.present? %>
  <div id="search_coupon">
    <% if @search_coupon.kind_of?(String) %>
      <%= @search_coupon %>
    <% else %>
      <%= "#{@search_coupon.code} (#{ Coupon.human_attribute_name("status.#{@search_coupon.status}") })" %>

      <% if @search_coupon.active? %>
        <span> <%= link_to t('buttons.disable_status'), disable_coupon_path(@search_coupon), method: :post %> </span>
      <% else %>
        <span> <%= link_to t('buttons.active_status'), enable_coupon_path(@search_coupon), method: :post %> </span>
      <% end %>
    <% end %>
  </div>
<% end %>


<% if @promotion.coupons.empty? %>
  <%= link_to t('buttons.update_promotion'), edit_promotion_path(@promotion) %>
  <%= link_to t('.generate_coupons'), generate_coupon_promotion_path(@promotion), method: :post %>
<% end %>

<div id="coupons_list">
  <ul>
    <% @promotion.coupons.each do |coupon| %>
      <li id="coupon-<%= coupon.code.parameterize %>">
        <%= "#{coupon.code} (#{ Coupon.human_attribute_name("status.#{coupon.status}") })" %>

        <% if coupon.active? %>
          <span> <%= link_to t('buttons.disable_status'), disable_coupon_path(coupon), method: :post %> </span>
        <% else %>
          <span> <%= link_to t('buttons.active_status'), enable_coupon_path(coupon), method: :post %> </span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to t('buttons.back'), promotions_path %>
