<% if @product_categories.empty? %>
  <p> <%= t('messages.categories_empty') %> </p>
<% end %>

<% @product_categories.each do |category| %>
  <dl>
    <dt> <%= ProductCategory.human_attribute_name(:name) %> </dt>
    <dd> <%= link_to category.name, category %> </dd>
    <dt> <%= ProductCategory.human_attribute_name(:code) %> </dt>
    <dd> <%= category.code %> </dd>
  </dl>
  <%= link_to t('buttons.atualizar_categoria'), edit_product_category_path(category) %>
  <%= link_to t('buttons.deletar_categoria'), category, method: :delete,
                                   data: {confirm: 'tem certeza?'} %>

<% end %>

<%= link_to t('buttons.criar_categoria'), new_product_category_path %>
<%= link_to t('buttons.back'), root_path %>
