<% if @product_categories.empty? %>
  <p> <%= t('.categories_empty') %> </p>
<% end %>

<% @product_categories.each do |category| %>
  <dl>
    <dt> <%= ProductCategory.human_attribute_name(:name) %> </dt>
    <dd> <%= link_to category.name, category %> </dd>
    <dt> <%= ProductCategory.human_attribute_name(:code) %> </dt>
    <dd> <%= category.code %> </dd>
  </dl>
  <%= link_to t('buttons.update_category'), edit_product_category_path(category) %>
  <%= link_to t('buttons.delete_category'), category, method: :delete,
                                   data: {confirm: t('message.confirm')} %>

<% end %>

<%= link_to t('buttons.create_category'), new_product_category_path %>
<%= link_to t('buttons.back'), root_path %>
