<header class="header_auth text-center">
  <div class="row">
    <h1 class="col-12 description-page mt-1">
      <%= t('titles.forgot_password_title') %>
    </h1>
  </div>
</header>

<main id="user_registration" >
  <div class="container">
    <div class="d-flex justify-content-center col-sm-12 col-md-10 col-lg">
      <div class="col-lg-5">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-row form-group w-100">
            <%= f.label :email %>
            <%= f.email_field :email,
                               autofocus: true,
                               autocomplete: "email",
                               class: "rounded-bottom border-bottom-2 form-control",
                               placeholder: t('placeholder.type_email')
            %>
          </div>

          <div class="form-row">
            <%= f.submit t('buttons.reset_password_send_email'), class: "text-uppercase btn-lg col-12 button-submit-auth-entry" %>
          </div>

          <div class="form-row">
            <div class="text-center mt-2">
              <p class="fs-6 lh-sm">
                <%= t('subtitles.sign_in_ask') %>
                <%= link_to t('links.sign_in'), "/users/sign_in", class: "text-uppercase submit_auth" %>
              </p>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</main>

<%= render "devise/shared/links" %>
